{
  "manifest_version": 3,
  "name": "GitLab Reviewer Auto Add",
  "version": "1.0.0",
  "description": "Automatically add selected reviewers to GitLab merge requests via checkboxes",
  "author": "Mohammad Sh",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://gitlab.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*/*/-/merge_requests/*/*",
        "https://gitlab.com/*/*/-/merge_requests/new*",
        "https://gitlab.com/*/merge_requests/*"
      ],
      "js": [
        "src/shared/Storage.js",
        "src/shared/ReviewerService.js",
        "src/shared/UIComponent.js",
        "src/website/GitLabAutomation.js",
        "src/website/content.js"
      ],
      "css": ["src/website/styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "GitLab Reviewer Auto Add",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://gitlab.com/*"]
    }
  ]
} 