{
  "name": "gitlab-auto-reviewers-extension",
  "version": "1.0.0",
  "description": "A Chrome extension for automatically adding reviewers to GitLab merge requests",
  "main": "content.js",
  "scripts": {
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.{js,css,html}",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run zip",
    "build": "powershell -Command \"Remove-Item -Path gitlab-auto-reviewers-extension -Recurse -Force -ErrorAction SilentlyContinue; New-Item -ItemType Directory -Path gitlab-auto-reviewers-extension -Force; Copy-Item -Path manifest.json,background.js,src,icons -Destination gitlab-auto-reviewers-extension -Recurse\"",
    "zip": "npm run build && powershell Compress-Archive -Path gitlab-auto-reviewers-extension/* -DestinationPath gitlab-auto-reviewers-extension.zip -Force",
    "clean": "powershell Remove-Item -Path gitlab-auto-reviewers-extension.zip -Force -ErrorAction SilentlyContinue",
    "validate": "web-ext lint",
    "start:firefox": "web-ext run --target=firefox-desktop",
    "start:chrome": "web-ext run --target=chromium"
  },
  "keywords": [
    "gitlab",
    "chrome-extension",
    "reviewers",
    "automation",
    "merge-request",
    "productivity"
  ],
  "author": "Mohammad Sh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/gitlab-auto-reviewers-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/gitlab-auto-reviewers-extension/issues"
  },
  "homepage": "https://github.com/your-username/gitlab-auto-reviewers-extension#readme",
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "web-ext": "^7.8.0"
  },
  "browserslist": [
    "chrome >= 88",
    "firefox >= 90",
    "edge >= 88"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "webExt": {
    "sourceDir": "./",
    "artifactsDir": "./dist/",
    "build": {
      "overwriteDest": true
    },
    "run": {
      "startUrl": ["https://gitlab.com"]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "*.js",
      "!background.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-console": "off"
    },
    "globals": {
      "chrome": "readonly"
    }
  }
} 